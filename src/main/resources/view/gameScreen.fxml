    <Pane id="phases" layoutX="692.0" layoutY="14.0" prefHeight="48.0" prefWidth="259.0">
      <Text fx:id="notification" />
    </Pane>
    <GridPane id="players" layoutX="692.0" layoutY="95.0" prefHeight="128.0" prefWidth="257.9999000000025">
      <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
