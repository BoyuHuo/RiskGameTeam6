    <image>
      <Image url="/images/gameBackground.jpg" />
    </image>
    <viewport>
      <Rectangle2D />
    </viewport>
  </ImageView>
  <children>
    <!--View the player's cards-->
    <Button id="myCards" layoutX="733.0" layoutY="257.0" mnemonicParsing="false" onMouseClicked="#newButtonOnClicked" prefWidth="182.0" text="View My Cards" textFill="BLACK">
