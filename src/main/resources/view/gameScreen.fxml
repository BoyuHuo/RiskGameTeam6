        <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      </rowConstraints>
    </GridPane>
    <Text layoutX="728.0" layoutY="389.0" scaleX="0.9309564850574211" scaleY="1.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Soldier Number : " />
