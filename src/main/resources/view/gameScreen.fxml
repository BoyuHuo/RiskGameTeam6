        <FXCollections fx:factory="observableArrayList">
          <String fx:value="1" />
          <String fx:value="2" />
          <String fx:value="3" />
        </FXCollections>
      </items>
    </ComboBox>
    <!--Certify dices number-->
    <Button id="certifyDicesNumber" font="$x1" layoutX="774.0" layoutY="465.0" mnemonicParsing="false" prefHeight="33.0" prefWidth="113.8798828125" text="Sure" textFill="BLACK" />
