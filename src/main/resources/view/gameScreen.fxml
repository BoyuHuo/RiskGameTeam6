<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="RiskGame.controller.gameScreenController">
  <!--<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../CSS/gameScreenController_CSS.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="RiskGame.controller.gameScreenController">-->
  <children>

    <!--View the player's cards-->
    <Button fx:id="myCards" layoutX="713.0" layoutY="284.0" mnemonicParsing="false" onMouseClicked="#newButtonOnClicked" prefHeight="33.0" prefWidth="171.0" text="My Cards" textFill="BLACK">
      <font>
        <Font size="18.0" fx:id="x1" />
      </font>
    </Button>



    <!--Show the dices number-->
    <Text layoutX="689.0" layoutY="442.0" scaleX="1.0" scaleY="1.000000921825766"
          strokeType="OUTSIDE" strokeWidth="0.0" text="Dices Number: " />
    <ComboBox id="dicesNumber" layoutX="813.0" layoutY="417.0" minWidth="49.0" prefWidth="96.0">
      <items>
        <FXCollections fx:factory="observableArrayList">
          <String fx:value="1" />
          <String fx:value="2" />
          <String fx:value="3" />
        </FXCollections>
      </items>
    </ComboBox>



    <!--Certify dices number-->
    <Button fx:id="certifyDicesNumber" font="$x1" layoutX="846.0" layoutY="481.0"
            mnemonicParsing="false" text="Sure" textFill="BLACK" />



    <!-- Show game phase information-->
    <Pane fx:id="phases" layoutX="658.0" layoutY="17.0" prefHeight="47.0" prefWidth="291.0">
      <Text fx:id="phase" text=" "/>
    </Pane>



    <!--Show information of players-->
    <GridPane fx:id="players" layoutX="674.0" layoutY="105.0" prefHeight="152.0" prefWidth="275.0">
      <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      </columnConstraints>
      <rowConstraints>
        <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      </rowConstraints>
    </GridPane>



    <!--Show the soldiers number-->
    <Text layoutX="687.0" layoutY="386.0" strokeType="OUTSIDE"
          strokeWidth="0.0" text="Soldiers Number: " />
    <TextField  layoutX="841.0" layoutY="367.0" prefWidth="68.0">
      <String fx:value="" />
    </TextField>



    <!--End this round of game-->
    <Button fx:id="endRound" font="$x1" layoutX="686.0" layoutY="481.0" mnemonicParsing="false" onAction="#endRoundClick" text="End Round" textFill="BLACK" />



    <!--Show the notice-->
    <Pane id="notifications" layoutX="674.0" layoutY="543.0" prefHeight="32.0" prefWidth="277.0">
      <Text fx:id="notification" text=" "/>
    </Pane>



    <!--Show the game information-->
    <BorderPane fx:id="gameMapPane" layoutX="26.0" layoutY="43.0" prefHeight="510.0" prefWidth="617.0">


    </BorderPane>



  </children>
</AnchorPane>
